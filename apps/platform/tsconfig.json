{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "../platform/**/*.ts",
    "../platform/**/*.tsx",
    "../platform/.next/types/**/*.ts",
    "../platform/next-env.d.ts",
    "../platform/next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "../platform/node_modules"
  ]
}
